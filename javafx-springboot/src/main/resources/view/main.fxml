<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="800" prefWidth="1400.0" stylesheets="@../css/main.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.lizhao.validator.view.controller.MainController">

   <Pane layoutX="392.0" layoutY="62.0" prefHeight="31.0" prefWidth="677.0">
      <Text fx:id="fileName" layoutX="76.0" layoutY="20.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 16px" text="...被选择文件名" />
      <Button fx:id="chooseFileButton" layoutX="233.0" mnemonicParsing="false" onAction="#onOpenFileChooser" prefHeight="31.0" prefWidth="146.0" styleClass="btn, btn-info" text="选择文件" />
      <Button fx:id="analysisButton" alignment="CENTER" layoutX="520.0" layoutY="-2.0" mnemonicParsing="false" onAction="#analysis" prefHeight="31.0" prefWidth="73.0" text="解析">
