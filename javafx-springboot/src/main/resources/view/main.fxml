         <styleClass>
            <String fx:value="btn" />
            <String fx:value="btn-success" />
            <String fx:value="analysis-button" />
         </styleClass>
      </Button>
      <Button fx:id="downloadButton" onAction="#download" layoutX="599.0" layoutY="-2.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="64.0" text="下载" />
   </Pane>

   <ProgressBar fx:id="progressBar" layoutX="500.0" layoutY="440.0" prefWidth="400.0" progress="0.0" visible="false" />
   <TableView fx:id="dataTable" layoutY="102.0" prefHeight="694.0" prefWidth="1400.0">
      <columns>
         <TableColumn fx:id="pointCode" prefWidth="75.0" text="行数" />
         <TableColumn fx:id="alarmContent" prefWidth="560.0" text="告警信息" />
         <TableColumn fx:id="needReport" prefWidth="90.0" text="是否上送" />
         <TableColumn fx:id="needMainMerge" prefWidth="120.0" text="是否主站合并" />
         <TableColumn fx:id="message" prefWidth="540.0" text="检测结果" />
      </columns>
   </TableView>
</Pane>
